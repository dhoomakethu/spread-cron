#!/bin/sh
set -e

if [ -f logs/spread.log ]; then
	cat logs/spread.log
else
	echo "spread.log does not exist in logs dir"
	exit 1
fi

if cat logs/spread.log | grep -q "Successful tasks:"; then
	echo "spread tests executed"
else
	echo "spread tests not executed"
	exit 1
fi

if cat logs/spread.log | grep -q "error: unsuccessful run"; then
	echo "spread tests failed"
	exit 1
else
	echo "spread tests passed"
	exit 0
fi
