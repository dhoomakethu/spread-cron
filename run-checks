#!/bin/sh

mkdir -p bin
( cd bin &&  wget https://niemeyer.s3.amazonaws.com/spread-amd64.tar.gz -O spread.tar.gz && tar xzvf spread.tar.gz )
git clone https://github.com/snapcore/snapd target

export SPREAD_CORE_CHANNEL=stable
cd target && ../bin/spread -v linode:ubuntu-16.04-64 linode:ubuntu-core-16-64 linode:ubuntu-core-16-64-fixme
